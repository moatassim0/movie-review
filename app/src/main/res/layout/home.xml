<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F477E"
    tools:context=".home">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30377E"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="CinePhile"
        android:textColor="#BC9F4E"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mostWatchedRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:layout_editor_absoluteX="0dp">

        <!-- Section Title and "View All" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Most Watched"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:clickable="true" />

            <TextView
                android:id="@+id/mostWatchedViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClickViewAll"
                android:text="View All"
                android:textColor="#FFD700"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Horizontal ScrollView for Thumbnails -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Placeholder for each thumbnail -->
                <ImageButton
                    android:id="@+id/mostWatched1"
                    android:tag="x"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie"/>

                <ImageButton
                    android:id="@+id/mostWatched2"
                    android:tag="x"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/mostWatched3"
                    android:tag="x"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/mostWatched4"
                    android:tag="x"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_action_name"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <!-- Repeat ImageButton for more items -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout> <!-- Most Watched-->
    <LinearLayout
        android:id="@+id/recentlyAddedRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mostWatchedRow"
        tools:layout_editor_absoluteX="0dp">

        <!-- Section Title and "View All" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recently Added"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:clickable="true" />

            <TextView
                android:id="@+id/recentlyAddedViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:clickable="true"
                android:onClick="onClickViewAll"
                />
        </LinearLayout>

        <!-- Horizontal ScrollView for Thumbnails -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Placeholder for each thumbnail -->
                <ImageButton
                    android:id="@+id/recentlyAdded1"
                    android:tag="1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/recentlyAdded2"
                    android:tag="2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/recentlyAdded3"
                    android:tag="3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/recentlyAdded4"
                    android:tag="4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <!-- Repeat ImageButton for more items -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout> <!-- Recently Added -->
    <LinearLayout
        android:id="@+id/highlyRatedRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/recentlyAddedRow"
        tools:layout_editor_absoluteX="0dp">

        <!-- Section Title and "View All" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Highly Rated"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:clickable="true" />

            <TextView
                android:id="@+id/highlyRatedViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:clickable="true"
                android:onClick="onClickViewAll"
                />
        </LinearLayout>

        <!-- Horizontal ScrollView for Thumbnails -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Placeholder for each thumbnail -->
                <ImageButton
                    android:id="@+id/highlyRated1"
                    android:tag="1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/highlyRated2"
                    android:tag="2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/highlyRated3"
                    android:tag="3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <ImageButton
                    android:id="@+id/highlyRated4"
                    android:tag="4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_action_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_name"
                    android:onClick="onClickMovie" />

                <!-- Repeat ImageButton for more items -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout> <!-- Highly Rated -->

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:background="#30377E"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
>

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home_clicked"
            android:onClick="onClickHomeButton"/>

        <ImageButton
            android:id="@+id/directoryButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/directory"
            android:onClick="onClickDirectoryButton"/>

        <ImageButton
            android:id="@+id/personalButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person"
            android:onClick="onClickPersonalButton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>