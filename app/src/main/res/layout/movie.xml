<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F477E"
    tools:context=".Movie">

    <!-- Top Bar with Back Button and Movie Title -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30377E"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu_back"
            android:onClick="onClickBackButton"
            app:tint="#BC9F4E" />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:text="Movie Title"
            android:textColor="#BC9F4E"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Movie Poster -->
            <ImageView
                android:id="@+id/moviePoster"
                android:layout_width="240dp"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_name" />

            <!-- Movie Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Genre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textColor="#FFD700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movieGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Action/Adventure"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Movie Details Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:rowCount="4">

                    <!-- Duration -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Duration:"
                        android:textColor="#FFD700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/movieDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 minutes"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Year -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Year:"
                        android:textColor="#FFD700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/movieYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2024"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Age Restriction -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Age Rating:"
                        android:textColor="#FFD700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/movieRestriction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="PG-13"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Views -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Views:"
                        android:textColor="#FFD700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/movieViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1,234"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- Director -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Director:"
                        android:textColor="#FFD700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/movieDirector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Director Name"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </GridLayout>
            </LinearLayout>

            <!-- Reviews Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/favoriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:drawableLeft="@drawable/favourite_outline"
                    android:onClick="onClickFavouriteButton"
                    android:text="Not Favourite"
                    android:textColor="#E6C01B" />

                <Button
                    android:id="@+id/seenButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickSeenButton"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:text="Not Seen"
                    android:textColor="#E6C01B"
                    android:drawableLeft="@drawable/eye_outline" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Reviews"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Add Favorite, Seen and Review Button -->

            <!-- Reviews Container -->
            <Button
                android:id="@+id/addReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="onClickAddReviewButton"
                android:text="Add Review"
                android:textColor="#E6C01B" />

            <LinearLayout
                android:id="@+id/reviewsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <!-- Example Review Item (will be added dynamically) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#30377E"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/reviewUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#BC9F4E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/userRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="4.5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp" />

                    <EditText
                        android:id="@+id/userReviewContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="15dp"
                        android:hint="Review text goes here..."
                        android:textColorHint="#BFBFBF"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
                <!-- Reviews List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reviewsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Bar (same as home page) -->
    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="#30377E"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:onClick="onClickHomeButton"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/directoryButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:onClick="onClickDirectoryButton"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/directory" />

        <ImageButton
            android:id="@+id/personalButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30377E"
            android:onClick="onClickPersonalButton"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>